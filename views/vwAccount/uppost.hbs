<div class="container">
    <h2 class="mt-5">Đăng bài viết mới</h2>
    <div class="shadow p-3 mb-5 bg-white rounded mt-5">
        <form action="/account/uppost" method="POST" enctype="multipart/form-data">
            <div class="btn btn-primary btn-sm float-left">
                <span>Chọn ảnh tiêu đề</span>
                <input type="file" name="AnhDaiDien">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Tiêu đề</span>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Username"
                    aria-describedby="basic-addon1" id="TieuDe" name="TieuDe">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Chuyên mục cha</label>
                </div>
                <select class="custom-select" id="ChuyenMucChaID" name="ChuyenMucChaID">
                    <option selected>Choose...</option>
                    <option value="1">Tin game</option>
                    <option value="2">Tin Esport</option>
                    <option value="3">Cẩm nang</option>
                    <option value="4">Cộng đồng</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Chuyên mục con</label>
                </div>
                <select class="custom-select" id="ChuyenMucConID" name="ChuyenMucConID">
                    <option selected>Choose...</option>
                    <option value="1">a </option>
                    <option value="2">b</option>
                    <option value="3">c</option>
                    <option value="4">d</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Tag</label>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Nhan" aria-describedby="basic-addon1"
                    id="Nhan" name="Nhan">
            </div>
            <div class="form-group">
                <label>Ngày đăng</label>
                <input required id="datepicker" value="{{dateformat NgayDang "mm/dd/yyyy"}}" width="276" name="date_post">

            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Nội dung tóm tắt</span>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="NDTomTat"
                    aria-describedby="basic-addon1" id="NDTomTat" name="NDTomTat">
            </div>
            <textarea name="NoiDung" id="editor">
    </textarea>
            <div class="text-right">
                <button type="submit" class="btn btn-outline-success mt-5">Save</button>
            </div>
        </form>
    </div>
</div>
<script>

    CKEDITOR.replace('editor');

    $('#datepicker').datepicker({
        uiLibrary: 'bootstrap4'
    });

</script>