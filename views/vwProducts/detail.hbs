<style>
    .detail {
        width: 70%;
        margin-left: 15%;
        margin-right: 25%;
    }

    textarea {
        width: 100%;
        height: 70px;
        padding: 12px 20px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        background-color: #f8f8f8;
        resize: none;
    }
</style>

<div class="detail">

    <div class="card-body">
        {{#if this.error}}
        <div class="alert alert-danger" role="alert">
            Invalid categoryId. <a href="/" class="alert-link">Go home</a>.
        </div>
        {{else}}
        {{#with this.product}}
        <div>
            <img src="/images/sp/{{ProID}}/main_thumbs.jpg" alt="{{TieuDe}}" class="card-img-top">
            <div class="card-body">
                <h4 class="card-text">
                    {{TenLoaiCon}}
                </h4>
                <br>
                <h2 class="card-title font-weight-bold">{{TieuDe}}</h2>
                <h5 class="color-lite-black pt-10">
                    <i class=" mr-5 font-12 fa fa-clock-o" aria-hidden="true"></i>
                    {{day}}/{{month}}/{{year}}
                </h5>
                <br>
                <p class="card-text">
                    {{{NoiDung}}}
                </p>
                <br><br><br>
                <h5>
                    từ khóa tìm kiếm:
                </h5>
            </div>

            <br><br>
            <hr>
            <div class="card-body">
                <h2>
                    <i class="fa fa-commenting-o" aria-hidden="true"></i>
                    BÌNH LUẬN
                </h2>
                <br>
                <form action="">
                    <textarea name="" id="" cols="30" rows="10" placeholder="Bạn nghĩ gì về tin này?"></textarea>
                </form>
                <br>
                <h4 class="p-title"><b>TIN TỨC CÙNG CHUYÊN MỤC</b></h4>
                <div class="row">

                    <div class="col-sm-6">
                        {{#each productsview}}
                        <div class="card mb-3" style="width: 730px;">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img src="/images/sp/{{ProID}}/main_thumbs.jpg" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="/products/{{ProID}}" class="font-weight-bold" title="View details">
                                                {{TieuDe}}
                                            </a>
                                        </h4>
                                        <p class="card-text"><small class="text-muted">
                                                <i class="color-primary mr-5 font-12 fa fa-clock-o"
                                                    aria-hidden="true"></i>
                                                {{day}}/{{month}}/{{year}}
                                            </small>
                                        </p>
                                        <p class="card-text">
                                            <i class="color-primary mr-5 font-12 ion-ios-bolt"></i>&nbsp;
                                            {{TenLoaiCon}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                        <!-- oflow-hidden -->
                    </div>
                    <!-- col-sm-6 -->

                </div>
                <!-- row -->
            </div>
        </div>
        {{/with}}
        {{/if}}

    </div>



</div>