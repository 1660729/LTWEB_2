                    <option value="Bóng Đá">Bóng Đá</option>
                    <option value="Kinh Doanh">Kinh Doanh</option>
                    <option value="Pháp Luậ">Pháp Luật</option>
                    <option value="Showbiz4">Showbiz</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="inputGroupSelect01">Chuyên mục con</label>
                </div>
                <select class="custom-select" id="ChuyenMucConID" name="ChuyenMucConID">
                    <option selected>Choose...</option>
                    <option value="Bóng đá Việt Nam">Bóng đá Việt Nam</option>
                    <option value="Ngoại Hạng Anh">Ngoại Hạng Anh</option>
                    <option value="Doanh Nhân">Doanh Nhân</option>
                    <option value="Bất Động Sản">Bất Động Sản</option>
                    <option value="Vụ Án Nổi Tiếng">Vụ Án Nổi Tiếng</option>
                    <option value="Trọng Án">Trọng Án</option>
                    <option value="Sao Việt">Sao Việt</option>
                    <option value="Sao Hollywood Và Các Nước Khác">Sao Hollywood Và Các Nước Khác</option>
                </select>
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Tag</span>
                </div>
                <input type="text" class="form-control" placeholder="" aria-label="Username"
                    aria-describedby="basic-addon1" id="Nhan" name="Nhan">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Ngày đăng</span>
                </div>
                <input type="date" class="form-control" id="NgayDang" name="NgayDang">
            </div>
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">Nội dung tóm tắt</span>
