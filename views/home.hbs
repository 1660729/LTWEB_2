<div class="container">
    <div class="card-body">

        <h4 class="p-title"><b>TIN MỚI</b></h4>
        <div class="row">

            {{#each this.products}}
            <div class="col-lg-4 mb-3">
                <div class="card h-100 shadow-sm">
                    <img src="/images/sp/{{ProID}}/main_thumbs.jpg" class="card-img-top"
                        style="width:335px; height:250px" alt="{{TieuDe}}" title="{{TieuDe}}">
                    <div class="card-body">
                        <h4 class="card-title">
                            <a href="/products/{{ProID}}" class="font-weight-bold" title="View details">
                                {{TieuDe}}
                            </a>
                        </h4>
                        <h6 class="card-title">
                            <i class="color-primary mr-5 font-12 fa fa-clock-o" aria-hidden="true"></i>
                            {{day}}/{{month}}/{{year}}
                        </h6>
                        <p class="card-text">
                            <i class="color-primary mr-5 font-12 ion-ios-bolt"></i>&nbsp;
                            {{TenLoaiCon}}
                        </p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
<section>
    <div class="container">
        <div class="row ">

            <div class="col-md-12 col-lg-8">
                <h4 class="p-title"><b>XEM NHIỀU</b></h4>
                <div class="row">

                    <div class="col-sm-6">
                        {{#each productsview}}
                        <div class="card mb-3" style="width: 730px;">
                            <div class="row no-gutters">
                                <div class="col-md-4">
                                    <img src="/images/sp/{{ProID}}/main_thumbs.jpg" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h4 class="card-title">
                                            <a href="/products/{{ProID}}" class="font-weight-bold" title="View details">
                                                {{TieuDe}}
                                            </a>
                                        </h4>
                                        <p class="card-text"><small class="text-muted">
                                                <i class="color-primary mr-5 font-12 fa fa-clock-o"
                                                    aria-hidden="true"></i>
                                                {{day}}/{{month}}/{{year}}
                                            </small>
                                        </p>
                                        <p class="card-text">
                                            <i class="color-primary mr-5 font-12 ion-ios-bolt"></i>&nbsp;
                                            {{TenLoaiCon}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>

                </div>

                <h4 class="p-title mt-30"><b>TIN MỚI MỌI CHUYỆN MỤC</b></h4>
                <div class="row">
                    {{#each productsViewCat}}
                    <div class="col-sm-6">
                                             
                        <h4 class="pt-20">
                            <img src="/images/sp/{{ProID}}/main_thumbs.jpg" alt="{{TieuDe}}">
                            <a href="/products/{{ProID}}" class="font-weight-bold" title="View details">                              
                                {{TieuDe}}
                            </a>
                        </h4>
                        <ul class="list-li-mr-20 pt-10 mb-30">
                            <h6 class="color-lite-black pt-10">
                                <i class="color-primary mr-5 font-12 fa fa-clock-o" aria-hidden="true"></i>
                                {{day}}/{{month}}/{{year}}
                            </h6>
                            <p class="card-text">
                                <i class="color-primary mr-5 font-12 ion-ios-bolt"></i>&nbsp;
                                {{TenLoaiCon}}
                            </p>
                        </ul>
                    </div>
                    {{/each}}

                </div>

                <a class="dplay-block btn-brdr-primary mt-20 mb-md-50" href="#"><b>VIEW MORE CRYPTO MINING
                        EVENTS</b></a>
            </div>

            <div class="d-none d-md-block d-lg-none col-md-3"></div>
            <div class="col-md-6 col-lg-4">
                <div class="pl-20 pl-md-0">
                    <div class="mtb-50">
                        <h4 class="p-title"><b>NỔI BẬT TRONG TUẦN</b></h4>
                        {{#each popular}}

                        <a class="oflow-hidden pos-relative mb-20 dplay-block" href="#">
                            <div class="wh-100x abs-tlr"><img src="/images/sp/{{ProID}}/main_thumbs.jpg" alt=""></div>
                            <div class="ml-120 min-h-100x">
                                <h6 class="font-weight-bold">
                                    <a href="/products/{{ProID}}" class="btn btn-sm btn-outline-primary"
                                        title="View details">
                                        {{TieuDe}}
                                    </a>
                                </h6>
                                <h6 class="color-lite-black pt-10">
                                    <i class="color-primary mr-5 font-12 fa fa-clock-o" aria-hidden="true"></i>
                                    {{day}}/{{month}}/{{year}}
                                </h6>
                                <p class="card-text">
                                    <i class="color-primary mr-5 font-12 ion-ios-bolt"></i>&nbsp;
                                    {{TenLoaiCon}}
                                </p>
                            </div>
                        </a>
                        {{/each}}
                    </div>
                    <div class="mtb-50 mb-md-0">
                        <h4 class="p-title"><b>NEWSLETTER</b></h4>
                        <p class="mb-20">Subscribe to our newsletter to get notification about new updates, information,
                            discount, etc..</p>
                        <form class="nwsltr-primary-1">
                            <input type="text" placeholder="Your email" />
                            <button type="submit"><i class="ion-ios-paperplane"></i></button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
