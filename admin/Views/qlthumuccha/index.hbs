<div class="card shadow mt-3">
    <h5 class="card-header">
          CHUYÊN MỤC CON
    </h5>
    <table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID </th>
            <th scope="col">Tên Loại Con</th>
            <th scope="col">ID Cha</th>
            <th scope="col" class="text-right">
                <a class="btn btn-outline-success btn-xs" href="/qlthumuccha/add" role="button" title="Add">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Thêm chuyên mục
                </a>
            </th>

        </tr>
    </thead>
    <tbody>
        {{#each this.chuyenmuccon}}
        <tr>
            <th scope="row" >{{ID}}</th>
            <td>{{TenLoaiCon}}</td>
            <td>{{IDCha}}</td>
            <td class="text-right">
                <a name="" id="" class="btn btn-primary btn-xs" href="/qlthumuccha/edit/{{ID}}" role="button" title="Edit">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>    
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>
</div>

