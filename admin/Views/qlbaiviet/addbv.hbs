<div class="card shadow mt-3">
    <h5 class="card-header">
          BÀI VIẾT
    </h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-8">
                    <form action="/qlbaiviet/addbv" method="POST">
                    <div class="form-group">
                        <label for="txtanhdaidien">Ảnh đại diện</label>
                        <input id="txtanhdaidien" name="AnhDaiDien" type="text" class="form-control"   placeholder="Ảnh đại diện">
                    </div>
                    <div class="form-group">
                        <label for="txttieude">Tiêu đề</label>
                        <input id="txttieude" name="TieuDe" type="text" class="form-control"   placeholder="Tiêu đề">
                    </div>
                    <div class="form-group">
                        <label for="txtIDcha">ID chuyên mục cha</label>
                        <input id="txtIDCha" name="ChuyenMucChaID" type="text" class="form-control"   placeholder="ID Cha">
                    </div>
                    <div class="form-group">
                        <label for="txtIDcon">ID chuyên mục con</label>
                        <input id="txtIDcon" name="ChuyenMucConID" type="text" class="form-control"   placeholder="ID con">
                    </div>
                    <div class="form-group">
                        <label for="txtlink">Link video</label>
                        <input id="txtlink" name="Youtube" type="text" class="form-control"   placeholder="Link">
                    </div>
                    <div class="form-group">
                        <label for="txtnhan">Nhãn</label>
                        <input id="txtnhan" name="Nhan" type="text" class="form-control"   placeholder="Nhãn">
                    </div>
                    <div class="form-group">
                            <label for="txtnd">Ngày Đăng</label>
                            <input id="txtnd" name="NgayDang" type="text" class="form-control" value="{{this.baiviet.NgayDang}}"  placeholder="Ngày Đăng">
                        </div>
                    <div class="form-group">
                        <label for="txtnoidung">Nội Dung</label>
                        <input class="form-control" name="NoiDung" id="txtnoidung" placeholder="Nội dung" rows="3"></input>
                    </div>
                    <div class="form-group">
                        <label for="txtndtt">Nội dung tóm tắt</label>
                        <input id="txtndtt" name="NDTomTat" type="text" class="form-control"   placeholder="Nội dung tóm tắt">
                    </div>
                    <div class="form-group">
                        <label for="txttt">Tình Trạng</label>
                        <input id="txttt" name="TinhTrang" type="text" class="form-control"   placeholder="Tình Trạng">
                    </div>
                    <div class="form-group">
                        <label for="txtlx">Lượt xem</label>
                        <input id="txtlx" name="LuotXem" type="text" class="form-control"   placeholder="Lượt xem">
                    </div>
                    <div >
                        <a class="btn btn-outline-primary" href="/qlbaiviet" role="button" title="Back">
                            <i class="fa fa-backward" aria-hidden="true"></i>
                            List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Save
                        </button>
                    </div>                    
                    
                    </form>
                </div> 
            </div>     
        </div>
</div>

